@model Entities.Dto.AccountModel.SmsConfirmation
@{
    ViewData["Title"] = "SmsConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header {
    <section>
        <div class="sptb-2 bannerimg">
            <div class="header-text mb-0">
                <div class="container">
                    <div class="text-center text-white py-7">
                        <h1 class="">Sms Onay</h1>
                        <ol class="breadcrumb text-center">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Sms Onayla</li>
                        </ol>

                    </div>
                </div>
            </div>
        </div>
    </section>

}

<section class="sptb">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-xl-4 col-md-6 d-block mx-auto">
                <div class="single-page w-100 p-0">
                    <div class="wrapper wrapper2">

                        <form action="/Account/SmsConfirmation" method="post" id="smsConfirmations" class="card-body">
                            @Html.HiddenFor(m => m.PhoneNumber)
                            <div class="mail">
                                <label>Onay Kodu</label>
                                <input type="text" name="SmsCode">
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Onayla" class="btn btn-primary" />
                            </div>
                            <div class="text-center text-dark mb-0">
                                Daha Önceden Onay Kodunu Girdiyseniz, <a href="index.html" class="text-primary">Buraya Tıklarayarak</a> Giriş Yapabilirsiniz.
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
