@model MVC_Redis.Models.Account.SmsConfirmation
@{
    ViewData["Title"] = "SmsConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="sptb">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-xl-4 col-md-6 d-block mx-auto">
                <div class="single-page w-100 p-0">
                    <div class="wrapper wrapper2">

                        <form action="/Account/SmsConfirmation" method="post" id="smsConfirmations" class="card-body">
                            @Html.HiddenFor(m => m.PhoneNumber)
                            <div class="mail">
                                <label>Onay Kodu</label>
                                <input type="text" name="SmsCode">
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Onayla" class="btn btn-primary" />
                            </div>
                            <div class="text-center text-dark mb-0">
                                Daha Önceden Onay Kodunu Girdiyseniz, <a href="index.html" class="text-primary">Buraya Tıklarayarak</a> Giriş Yapabilirsiniz.
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
